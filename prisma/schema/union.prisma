model Union {
  id          String   @id @default(uuid())
  name        String   @unique
  population  Int?

  villages    Village[]
  recipients  ServiceRecipient[]

  createdAt   DateTime @default(now())
}

model Village {
  id          String   @id @default(uuid())
  name        String
  population  Int?

  unionId     String
  union       Union    @relation(fields: [unionId], references: [id])

  recipients  ServiceRecipient[]

  @@unique([name, unionId])
}